# Copy this file to .env and customize for your unRAID paths and ports

# Host path to SQLite DB file (or keep default: ./server/db.sqlite3)
STROPTIMISE_DB=/mnt/user/first/stroptimise/db/db.sqlite3

# Host path for exports produced by the app
STROPTIMISE_EXPORTS=/mnt/user/first/stroptimise/exports

# Host path to the built frontend files (copy frontend/build here)
STROPTIMISE_FRONTEND_BUILD=/mnt/user/appdata/compose/stroptimise/frontend_build

# Optional: custom nginx config to mount into the frontend container
STROPTIMISE_NGINX_CONF=/mnt/user/appdata/compose/stroptimise/nginx/default.conf
